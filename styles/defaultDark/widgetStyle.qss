/* defaultDark theme
   widget style */

QWidget {
        background-color: #1E1E1E;
        color: #ffffff;
        /* border: none; */
    }

QToolBar {
    background: #3f3f3f;
}

QToolBar > QWidget#spacer {
    background: transparent;
}

QPushButton, QToolButton {
    background-color: #363636;
    color: #ffffff;
}

QPushButton:hover, QToolButton:hover {
    background-color: #4a4a4a;
}


