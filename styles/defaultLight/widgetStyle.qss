KeyWidget{
    background: #fafafa;
    color: #000000;
    border: 2px solid #2b2e4a;
}

KeyWidget[uncorrect="true"] {
    background: red;
}

KeyWidget:pressed{
    background: #05bc67;
    color: #fafafa;
    border: 3px solid #2b2e4a;
}


KeyboardWidget {
    margin: 0;
    /* background:red; */
}

KeyTextEdit{
    width: 70%;
    background: #f0f5ed/* #8781b5 */ ;
    border: 2px solid #d3f1d6;
}

