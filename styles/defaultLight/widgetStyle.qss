QPushButton:hover, QToolButton:hover {
    background-color: #fafafa;
    color: #05bc67;
    border: 2px solid #05bc67;
}


QPushButton:pressed, QToolButton:pressed {
    background-color: #05bc67;
    color: #fafafa;
    border: 2px solid transparent;
}

