TabBarWithControl {
    border-bottom: 1px solid rgba(5, 196, 107, 0.2);
    background: #f0f5ed !important;
}

ThemeButton {
    icon-size: 30px;
    background: transparent;
    border: 0;
    margin: 0;
    padding: 0 10px;
    margin-right: 35px;
}

#Corner {
    background: transparent;
}
/* Стиль для QTabBar */

QTabBar {
    font: 500 20px;
    background: transparent;  /* Общий фон с кнопками */
    border: none;
    margin: 0;
}

QTabBar::tab {
    color: #2b2e4a;          /* Нейтральный цвет текста */
    padding: 6px 12px;
    margin: 0 0 0 10%;
    border: none;
    border-bottom: 3px solid transparent;
}

QTabBar::tab:selected {
    /* background: rgba(5, 196, 107, 0.1); */
    color: #05c46b;         /* Акцентный цвет (как у кнопок) */
    border-bottom: 3px solid #05c46b;
}

