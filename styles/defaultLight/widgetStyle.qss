QMenuBar::item:selected {
    background-color: #4a4a4a;
}

KeyWidget{
    background: #88C0D0;
    color: #090f1b;
    border: 2px solid #090f1b;
}

KeyWidget[uncorrect="true"] {
    background: red;
}

KeyWidget:pressed{
    background: #090f1b;
    color: #88C0D0;
    border: 2px solid #88C0D0;
}

KeyTextEdit{
    background: transparent/* #8781b5 */ ;
    border: 3px solid #9480eb;
}

QPushButton#reset{
    background: transparent;
}

QPushButton#exitButton {
    background: #a72727;
    color: #131313;
}

QPushButton#exitButton:pressed {
    background:#ffe72b2b;
}
