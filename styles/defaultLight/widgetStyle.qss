/* defaultLight theme
   widget style */

QWidget {
    background-color: #fafafa;
    color: #2b2e4a;
}

QProgressBar {
    margin: 0px 10px 0px;
    text-align: center;
    border-radius:5px;
    background: #f0f5ed;
    /* border: 2px solid; */
    height: 30%;
}

QProgressBar::chunk {
    border-radius: 3px;
    background-color:#05bc67;
}


QToolBar {
    background: #d4d4d4;
    border: 0px;
}

QToolBar > QWidget#spacer {
    background: transparent;
}


QPushButton, QToolButton {
    background-color: #05bc67;
    color: #2b2e4a;
    /* border: 2px solid transparent; */
}

