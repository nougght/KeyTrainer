QPushButton#exitButton, QPushButton#minimiseButton {
    /* font-size: 5px; */
    margin: 0;
    border: 0px;
    background: transparent;

    /* border-bottom: 1px solid #2b2e4a; */
    border-radius: none;
}

QPushButton#minimiseButton:hover {
    background-color: rgba(5, 196, 107, 0.4);
    color:#2b2e4a;
}

QPushButton#exitButton:hover {
    background:#ffe72b2b;
    color:#2b2e4a;
}


RadioList {
    background-color: #07e47d;
    border-radius: 15%;
    margin: 5px 0;
}

QRadioButton {
    font-size: 30px;
    text-align: center;
    background: transparent;
    border-radius: 15%;
    padding: 4% 10%;
    margin: 0;
    border: 5px solid transparent;
}

