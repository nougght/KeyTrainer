}


QFrame#cell {
    width: 15px;
    border-radius: 5px;
    border: 2px solid #2b2e4a;
}

QFrame#cell:hover {
    border: 2px solid #aa0c0c;
}

QFrame[activity='0'] {
    background: rgb(235, 237, 240);
}
QFrame[activity='1'] {
    background: rgb(155, 233, 168);
}
QFrame[activity='2'] {
    background: rgb(64, 196, 99);
}
QFrame[activity='3'] {
    background: rgb(48, 161, 78);
}
QFrame[activity='4'] {
    background: rgb(33, 110, 57);
}