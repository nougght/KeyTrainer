/* defaultLight theme
   widget style */

QWidget {
    background-color: #fafafa;
    color: #2b2e4a;
}


QProgressBar {
    margin: 0px 10px 0px;
    text-align: center;
    border-radius:5px;
    background: #e4f0dd;
    border: 2px solid #2b2e4a;
    height: 30%;
}

QProgressBar::chunk {
    margin: 2px;
    width: 17%;
    border-radius: 6%;
    background-color:#05bc67;
}


QToolBar {
    background: transparent;
    border: 0px;
}

QToolBar > QWidget#spacer{
    background: transparent;
}


QPushButton, QToolButton {
    background-color: #05bc67;
    color: #2b2e4a;
    /* border: 2px solid transparent; */
}


